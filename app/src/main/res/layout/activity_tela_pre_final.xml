<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="butecogaragem.cursoandroid.com.butecogaragem.TelaPreFinal"
    android:background="#383333">

    <CheckBox
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="MEIA"
        android:id="@+id/checkBox"
        android:checked="false"
        android:textSize="@dimen/texto_meia"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <CheckBox
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="INTEIRA"
        android:id="@+id/checkBox2"
        android:checked="false"
        android:textSize="@dimen/texto_inteira"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OBSERVAÇÃO:"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:id="@+id/editText3"
        android:textColor="#000000"
        android:textSize="@dimen/texto_observação"
        android:visibility="visible"
        android:textIsSelectable="false"
        android:singleLine="false"
        android:gravity="top"
        android:backgroundTint="#ffffff"
        android:background="#ffffff"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="OUTRO ITEM"
        android:id="@+id/button45"
        android:layout_below="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/texto_outro_iten"
        android:textStyle="bold" />

    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="FINALIZAR "
        android:id="@+id/button46"
        android:layout_alignTop="@+id/button45"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:textSize="@dimen/texto_finalizar"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="*Só finalize se não houver mais itens para colocar no pedido"
        android:id="@+id/textView4"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/button45"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/abc_vector_test" />

</RelativeLayout>
